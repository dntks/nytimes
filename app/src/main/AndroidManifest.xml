<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dk.newyorktimes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.dk.newyorktimes.NYTimesApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_new_york_times_seeklogo_com"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_new_york_times_seeklogo_com"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewYorkTimes">
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>